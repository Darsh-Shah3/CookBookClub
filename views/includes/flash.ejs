<% if (success && success.length) { %>
    <div class="toast-container position-fixed bottom-0 end-0 p-3 z-3">
      <% success.forEach(function(msg) { %>
      <div class="toast align-items-center text-bg-success border-0" role="alert"
        aria-live="assertive" aria-atomic="true" data-bs-autohide="true">
        <div class="d-flex">
          <div class="toast-body">
            <i class="fa-regular fa-circle-check fa-lg"
              style="color: #75b798;"></i><%= msg %>
          </div>
          <button type="button" class="btn-close btn-close-white me-2 m-auto"
            data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
      </div>
      <% }) %>
    </div>
    <% } %>
    
    <% if (error && error.length) { %>
    <div class="toast-container position-fixed bottom-0 end-0 p-3 ">
      <% console.log('Hello in flash') %>
      <% error.forEach(function(msg) { %>
      <div class="toast align-items-center text-bg-danger border-0" role="alert"
        aria-live="assertive" aria-atomic="true" data-bs-autohide="true">
        <div class="d-flex">
          <div class="toast-body">
            <i class="fa-solid fa-circle-xmark mx-1"
              style="color: #ea86af;"></i><%= msg %> 
          </div>
          <button type="button" class="btn-close btn-close-white me-2 m-auto"
            data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
      </div>
      <% }) %>
    </div>
    <% } %>